<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".CamInjectorMain">

    <TextView android:text="@string/app_name" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/cmdConnect"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Bitmap"
        android:id="@+id/cmdNewBmp"
        android:layout_below="@+id/cmdConnect"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enroll Test"
        android:id="@+id/cmdEnrollTest"
        android:layout_above="@+id/cmdNewBmp"
        android:layout_toEndOf="@+id/cmdNewBmp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recog. Test"
        android:id="@+id/cmdRecogTest"
        android:layout_alignTop="@+id/cmdNewBmp"
        android:layout_toEndOf="@+id/cmdNewBmp"
        android:layout_marginStart="33dp" />

</RelativeLayout>

